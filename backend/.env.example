# Database Configuration (Railway MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=event_db
DB_PORT=3306

# JWT Configuration (Generate strong random string for production!)
JWT_SECRET=your_jwt_secret_key_for_development_12345

# Session Configuration (Generate strong random string for production!)
SESSION_SECRET=your_session_secret_key_for_development_67890

# Email Configuration (Gmail example)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL (Update with your Railway frontend domain)
FRONTEND_URL=http://localhost:3001

# Server Configuration
PORT=3000

# App URL for certificate verification (Update with your Railway backend domain)
APP_URL=http://localhost:3000

# Node Environment (set to 'production' for deployment)
NODE_ENV=development

# Xendit Configuration (Use production keys for deployment!)
XENDIT_SECRET_KEY=xnd_development_your_secret_key
XENDIT_PUBLIC_KEY=xnd_public_development_your_public_key
XENDIT_WEBHOOK_TOKEN=your_webhook_verification_token
